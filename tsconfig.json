{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",       
    "moduleResolution": "node", 
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
  },
  "include": [
    "src/**/*"
  ]
}
